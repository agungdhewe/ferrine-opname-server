<div class="row mb-4">
    <div class="col-12">
        <h1 class="fw-bold h3 mb-1">Selamat Datang, <%= user.fullname %>!</h1>
        <p class="text-secondary">Berikut adalah ringkasan operasional Stock Opname hari ini.</p>
    </div>
</div>

<div class="row g-4">
    <!-- Stats Cards -->
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-secondary mb-1">User Aktif</div>
            <div class="h2 fw-bold mb-0 text-primary">
                <%= stats.users %>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-secondary mb-1">Device Terdaftar</div>
            <div class="h2 fw-bold mb-0 text-success">
                <%= stats.devices %>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-secondary mb-1">Total Item</div>
            <div class="h2 fw-bold mb-0 text-info">
                <%= stats.items %>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-secondary mb-1">Project Berjalan</div>
            <div class="h2 fw-bold mb-0 text-warning">
                <%= stats.activeProjects %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="card p-4 text-center">
            <h5 class="fw-bold mb-3">Siap untuk memulai?</h5>
            <p class="text-muted mb-4">Gunakan menu navigasi di atas untuk mengelola data atau memantau project.</p>
            <div>
                <a href="/projects" class="btn btn-primary px-4">Lihat Daftar Project</a>
            </div>
        </div>
    </div>
</div>