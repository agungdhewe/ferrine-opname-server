<div class="row mb-4">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a href="/items">Items</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <%= targetItem ? 'Edit Item' : 'Tambah Item' %>
                </li>
            </ol>
        </nav>
        <h1 class="fw-bold h3">
            <%= targetItem ? 'Edit Item' : 'Tambah Item Baru' %>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card p-4">
            <form action="<%= targetItem ? '/items/' + targetItem.itemId : '/items' %>" method="POST">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="itemId" class="form-label">Item ID (SKU)</label>
                        <input type="text" class="form-control" id="itemId" name="itemId"
                            value="<%= targetItem ? targetItem.itemId : '' %>" <%=targetItem ? 'readonly' : 'required'
                            %>>
                    </div>
                    <div class="col-md-6">
                        <label for="brandCode" class="form-label">Brand Code</label>
                        <input type="text" class="form-control" id="brandCode" name="brandCode"
                            value="<%= targetItem ? targetItem.brandCode : '' %>" required>
                    </div>

                    <div class="col-12 mt-4">
                        <h6 class="fw-bold mb-3 border-bottom pb-2">Informasi Produk</h6>
                    </div>

                    <div class="col-md-12">
                        <label for="name" class="form-label">Nama Barang</label>
                        <input type="text" class="form-control" id="name" name="name"
                            value="<%= targetItem ? targetItem.name : '' %>" required>
                    </div>

                    <div class="col-md-6">
                        <label for="article" class="form-label">Article</label>
                        <input type="text" class="form-control" id="article" name="article"
                            value="<%= targetItem ? targetItem.article : '' %>">
                    </div>
                    <div class="col-md-6">
                        <label for="category" class="form-label">Kategori</label>
                        <input type="text" class="form-control" id="category" name="category"
                            value="<%= targetItem ? targetItem.category : '' %>">
                    </div>

                    <div class="col-md-4">
                        <label for="material" class="form-label">Material</label>
                        <input type="text" class="form-control" id="material" name="material"
                            value="<%= targetItem ? targetItem.material : '' %>">
                    </div>
                    <div class="col-md-4">
                        <label for="color" class="form-label">Warna</label>
                        <input type="text" class="form-control" id="color" name="color"
                            value="<%= targetItem ? targetItem.color : '' %>">
                    </div>
                    <div class="col-md-4">
                        <label for="size" class="form-label">Size</label>
                        <input type="text" class="form-control" id="size" name="size"
                            value="<%= targetItem ? targetItem.size : '' %>">
                    </div>

                    <div class="col-12 mt-4">
                        <h6 class="fw-bold mb-3 border-bottom pb-2">Harga & Stok (Sistem)</h6>
                    </div>

                    <div class="col-md-4">
                        <label for="price" class="form-label">Harga Modal</label>
                        <input type="number" step="0.01" class="form-control" id="price" name="price"
                            value="<%= targetItem ? targetItem.price : 0 %>">
                    </div>
                    <div class="col-md-4">
                        <label for="sellPrice" class="form-label">Harga Jual</label>
                        <input type="number" step="0.01" class="form-control" id="sellPrice" name="sellPrice"
                            value="<%= targetItem ? targetItem.sellPrice : 0 %>">
                    </div>
                    <div class="col-md-4">
                        <label for="discount" class="form-label">Diskon (%)</label>
                        <input type="number" step="0.01" class="form-control" id="discount" name="discount"
                            value="<%= targetItem ? targetItem.discount : 0 %>">
                    </div>

                    <div class="col-md-4">
                        <label for="stockQty" class="form-label">Stok Sistem</label>
                        <input type="number" class="form-control" id="stockQty" name="stockQty"
                            value="<%= targetItem ? targetItem.stockQty : 0 %>">
                    </div>
                    <div class="col-md-4">
                        <label for="printQty" class="form-label">Qty Cetak</label>
                        <input type="number" class="form-control" id="printQty" name="printQty"
                            value="<%= targetItem ? targetItem.printQty : 0 %>">
                    </div>
                    <div class="col-md-4">
                        <label for="pricingId" class="form-label">Pricing ID</label>
                        <input type="text" class="form-control" id="pricingId" name="pricingId"
                            value="<%= targetItem ? targetItem.pricingId : '' %>">
                    </div>

                    <div class="col-md-4">
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" id="isSpecialPrice" name="isSpecialPrice"
                                <%=targetItem && targetItem.isSpecialPrice ? 'checked' : '' %>>
                            <label class="form-check-label" for="isSpecialPrice">Harga Spesial</label>
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="description" class="form-label">Deskripsi Tambahan</label>
                        <textarea class="form-control" id="description" name="description"
                            rows="3"><%= targetItem ? targetItem.description : '' %></textarea>
                    </div>

                    <div class="col-12 mt-4">
                        <div class="form-check form-switch p-3 bg-light rounded">
                            <input class="form-check-input ms-0 me-2" type="checkbox" id="disabled" name="disabled"
                                <%=targetItem && targetItem.disabled ? 'checked' : '' %>>
                            <label class="form-check-label fw-medium" for="disabled">Nonaktifkan Item</label>
                            <p class="small text-muted mb-0 mt-1">Item yang dinonaktifkan tidak akan muncul dalam daftar
                                pencarian scan.</p>
                        </div>
                    </div>

                    <div class="col-12 mt-5">
                        <button type="submit" class="btn btn-primary px-4 py-2">Simpan Item</button>
                        <a href="/items" class="btn btn-link text-secondary">Batal</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>